<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match"
    app:startDestination="@id/matchListFragment">

    <fragment
        android:id="@+id/matchListFragment"
        android:name="com.example.squadme.MainActivity.matches.matchesList.MatchListFragment"
        android:label="fragment_match_list"
        tools:layout="@layout/fragment_match_list" >
        <action
            android:id="@+id/action_matchListFragment_to_matchCreationFragment"
            app:destination="@id/matchCreationFragment" />
        <action
            android:id="@+id/action_matchListFragment_to_matchDetailFragment"
            app:destination="@id/matchDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchCreationFragment"
        android:name="com.example.squadme.MainActivity.matches.matchesCreation.MatchCreationFragment"
        android:label="fragment_match_creation"
        tools:layout="@layout/fragment_match_creation" >
        <action
            android:id="@+id/action_matchCreationFragment_to_matchListFragment"
            app:destination="@id/matchListFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchDetailFragment"
        android:name="com.example.squadme.MainActivity.matches.matchesDetail.MatchDetailFragment"
        android:label="fragment_match_detail"
        tools:layout="@layout/fragment_match_detail" >
        <argument
            android:name="match"
            app:argType="com.example.squadme.data.Models.Match"></argument>
        <action
            android:id="@+id/action_matchDetailFragment_to_matchUpdateFragment"
            app:destination="@id/matchUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchUpdateFragment"
        android:name="com.example.squadme.MainActivity.matches.matchesUpdate.MatchUpdateFragment"
        android:label="fragment_match_update"
        tools:layout="@layout/fragment_match_update">
        <argument
            android:name="match"
            app:argType="com.example.squadme.data.Models.Match"></argument>
        <action
            android:id="@+id/action_matchUpdateFragment_to_matchListFragment"
            app:destination="@id/matchListFragment" />
    </fragment>
</navigation>